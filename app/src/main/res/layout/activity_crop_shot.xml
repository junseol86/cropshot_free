<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ko.hyeonmin.cropshotfree.activities.CropShotActivity"
    android:background="@color/semiDarkGray"
    android:id="@+id/cropshotCl"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/console"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/darkGray"
        app:layout_constraintHorizontal_bias="0.0"
        >

        <ImageView
            android:id="@+id/crop_direct_button"
            android:layout_width="38dp"
            android:layout_height="0dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/crop_direct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/crop_squeeze_button"
            android:layout_width="38dp"
            android:layout_height="0dp"
            android:src="@drawable/crop_squeeze"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/crop_direct_button"
            android:alpha="0.2"
            />

        <ImageView
            android:id="@+id/crop_ratio_button"
            android:layout_width="38dp"
            android:layout_height="0dp"
            android:src="@drawable/crop_ratio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/crop_squeeze_button"
            android:alpha="0.2"
            />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/directConsole"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/crop_ratio_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cropDirectCenterBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/cropDirectCenterImg"
                    android:layout_width="23dp"
                    android:layout_height="0dp"
                    android:src="@drawable/direct_centered_on"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/cropDirectCenterImg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginLeft="2dp"
                    android:textColor="#FFFFFF"
                    android:text="@string/centered"
                    />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
        <ko.hyeonmin.cropshotfree.extended_views.SizerView
            android:id="@+id/sizerView"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintLeft_toRightOf="@+id/crop_ratio_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:layout_editor_absoluteY="8dp" />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ratioConsole"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/crop_ratio_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/ratioWidth"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ratioExchange"
                android:inputType="numberDecimal"
                android:text="4"
                android:background="#222222"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                />
            <ImageView
                android:id="@+id/ratioExchange"
                android:layout_width="38dp"
                android:layout_height="0dp"
                android:src="@drawable/ratio_exchange"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ratioWidth"
                app:layout_constraintRight_toLeftOf="@+id/ratioHeight"
                />
            <EditText
                android:id="@+id/ratioHeight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ratioExchange"
                app:layout_constraintRight_toRightOf="parent"
                android:inputType="numberDecimal"
                android:text="3"
                android:background="#222222"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/console"
        app:layout_constraintBottom_toTopOf="@+id/panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ko.hyeonmin.cropshotfree.extended_views.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/console"
        app:layout_constraintBottom_toTopOf="@+id/panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/darkGray"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/folderButtonCl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/folderButton"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:src="@drawable/folder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/folderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toRightOf="@id/folderButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="4dp"
                android:textSize="16dp"
                />
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:id="@+id/deleteRecentPanel"
            android:layout_width="104dp"
            android:layout_height="52dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/deleteRecentButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/remove"
                />
            <RelativeLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/remove"
                android:background="#222222"
                >
                <ImageView
                    android:id="@+id/recentPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/moveFinger"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/move_finger"
        android:visibility="gone"
        android:alpha="0.8"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/finishPopup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#CC000000"
        android:visibility="gone"
        >

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="ca-app-pub-6948199413384164/9990921467">
        </com.google.android.gms.ads.AdView>

        <RelativeLayout
            android:id="@+id/finishButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/black_round_bordered"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="@string/confirm_finish"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                />

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
