<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ko.hyeonmin.cropshotfree.activities.CropShotActivity"
    android:background="@color/semiDarkGray"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/console"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/darkGray"
        app:layout_constraintHorizontal_bias="0.0"
        >

        <ImageView
            android:id="@+id/crop_direct_button"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:src="@drawable/crop_direct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/crop_ratio_button"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:src="@drawable/crop_ratio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/crop_direct_button"
            android:alpha="0.2"
            />
        <ko.hyeonmin.cropshotfree.extended_views.SizerView
            android:id="@+id/sizerView"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintLeft_toRightOf="@+id/crop_ratio_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:layout_editor_absoluteY="8dp" />

    </android.support.constraint.ConstraintLayout>

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/console"
        app:layout_constraintBottom_toTopOf="@+id/panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ko.hyeonmin.cropshotfree.extended_views.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/console"
        app:layout_constraintBottom_toTopOf="@+id/panel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/darkGray"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/folderButtonCl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/folderButton"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:src="@drawable/folder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/folderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                app:layout_constraintLeft_toRightOf="@id/folderButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="4dp"
                android:textSize="16dp"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
